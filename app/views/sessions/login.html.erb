<h1>Login</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <p class="error"><%= e %></p>
    <% end %>
<% end %>

<div class="wrapper">

  <div class="login-wrapper">
    <h2>Login</h2>
    <form action="/login" method="post">
      <%= token_tag nil %>
      <label>Email:<input type="text" name="login[email]"></label>
      <label>Password:<input type="password" name="login[password]"></label>
      <input type="submit" value="Log In">
    </form>
    <br>
    <a href="/register">Not a member yet? Click here to register</a>
  </div>



</div>